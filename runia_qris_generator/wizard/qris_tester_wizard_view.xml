<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="view_qris_tester_wizard_form" model="ir.ui.view">
        <field name="name">qris.payload.tester.wizard.form</field>
        <field name="model">qris.payload.tester.wizard</field>
        <field name="arch" type="xml">
            <form string="QRIS Tester">
                <sheet>
                    <div class="alert alert-info" role="alert" invisible="not dynamic_payload">
                        QR code generated successfully!
                    </div>
                    <group>
                        <group name="input">
                            <field name="master_id"/>
                            <field name="currency_id" invisible="1"/>
                            <field name="amount" widget="monetary" options="{'currency_field': 'currency_id'}"/>
                        </group>
                    </group>
                    
                    <div invisible="not qr_image" class="mt-3 text-center d-flex flex-column align-items-center">
                        <field name="qr_image" widget="image" readonly="1" nolabel="1" style="max-width: 400px; height: auto; border: 1px solid #eee; padding: 10px; border-radius: 10px;"/>
                        <div class="mt-2 text-muted" style="word-break: break-all; font-size: 0.8rem;">
                            <strong>Payload:</strong> <field name="dynamic_payload"/>
                        </div>
                    </div>

                    <footer>
                        <button name="action_generate" string="Generate QR" type="object" class="btn-primary"/>
                        <button string="Close" class="btn-secondary" special="cancel"/>
                    </footer>
                </sheet>
            </form>
        </field>
    </record>

    <record id="action_qris_tester_wizard" model="ir.actions.act_window">
        <field name="name">QRIS Tester Wizard</field>
        <field name="res_model">qris.payload.tester.wizard</field>
        <field name="view_mode">form</field>
        <field name="target">new</field>
    </record>
</odoo>
